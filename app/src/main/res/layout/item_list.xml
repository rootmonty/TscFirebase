<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:background="#fff"
    android:padding="20dp"
    android:theme="@style/CardView.Light"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/list_avatar"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_below="@+id/list_title"
            android:background="@drawable/teacher"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/list_title"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/list_avatar"
            android:text="Name Of Teachers "
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/list_desc"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/list_avatar"
            android:layout_alignLeft="@+id/list_title"
            android:layout_alignStart="@+id/list_title"
            android:layout_below="@+id/list_title"
            android:background="#fff"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="FEEDBACK "
            android:textColor="#000000"
            android:textSize="14sp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>